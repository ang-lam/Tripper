<% if @top_destinations %>
<h2>Top Destinations</h2><br>
  <% @top_destinations.each do |destination| %>
    <li><%= destination.city %>
  <% end %>
<% end %>

<br><br>

<h1>Plan A New Trip</h1><br>

<%= render partial: "errors", locals: {object: @destination} %><br>

<%= form_with model: @destination do |f| %>
    <h4>Select your destination:</h4>
    <%= f.collection_select :id, @destinations, :id, :collection_select_destination_name, include_blank: true %><br><br>
    <h4>Enter a destination</h4>
    <%= f.label :city %>
    <%= f.text_field :city %> <br><br>
    <%= f.label :state %>
    <%= f.text_field :state %> <br><br>
    <%= f.label :country %>
    <%= f.text_field :country %> <br><br>
    <%= f.submit 'Submit' %>
<% end %>
