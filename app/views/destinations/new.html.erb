<h1>Top Destinations</h1>

<% if @top_destinations %>
  <% @top_destinations.each do |destination| %>
    <li><%= destination.city %>
  <% end %>
<% end %>

<h1>Enter a Destination</h1>

<%= render partial: "errors", locals: {object: @destination} %>


<!-- allow users to select from existing locations (drop down select) -->
<%= form_with model: @destination do |f| %>
    <%= f.collection_select :id, @destinations, :id, :collection_select_destination_name, include_blank: true %><br>
    <%= f.label :city %>
    <%= f.text_field :city %> <br>
    <%= f.label :state %>
    <%= f.text_field :state %> <br>
    <%= f.label :country %>
    <%= f.text_field :country %> <br>
    <%= f.submit 'Submit' %>
<% end %>
