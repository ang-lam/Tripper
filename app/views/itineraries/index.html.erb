<h1> Itineraries</h1>

<% @itineraries.each do |itinerary| %>
    <%= itinerary.date.strftime("%A, %b %e, %Y") %>
        <% itinerary.activities.each do |activity| %>
        <li><%= activity.time.strftime("%l:%M %p") %>
        <%= activity.description %></li>
    <% end %><br>
<% end %>



<br><%= link_to "Create New Itinerary", new_destination_itinerary_path %>
<%= link_to "Delete This Trip", {action: :destroy, id: @destination.id}, method: :delete, data: {confirm: 'Are you sure?'} %>